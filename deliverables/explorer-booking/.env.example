# Explorer Shack - Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=production
PORT=3001

# Server Ports
BACKEND_PORT=3001
FRONTEND_PORT=3000
ADMIN_PORT=3002

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/explorer_shack"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=explorer_shack
DB_USER=username
DB_PASSWORD=password

# Bland AI Configuration
BLAND_AI_API_KEY=your_bland_ai_api_key_here
BLAND_AI_WEBHOOK_SECRET=your_webhook_secret_here
BLAND_AI_BASE_URL=https://api.bland.ai

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@explorershack.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads
TESTIMONIAL_UPLOAD_DIR=./uploads/testimonials

# Security Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# External API Keys
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Social Media Integration
FACEBOOK_APP_ID=your_facebook_app_id
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Development Settings
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_SWAGGER=false

# Production Settings
CLUSTER_MODE=false
WORKER_PROCESSES=auto
ENABLE_COMPRESSION=true
ENABLE_HELMET=true

# Video Testimonial Settings
TESTIMONIAL_MAX_DURATION=300
TESTIMONIAL_AUTO_APPROVE=false
TESTIMONIAL_ALLOWED_FORMATS=webm,mp4,avi,mov

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
NOTIFICATION_QUEUE_ENABLED=true

# Cache Settings
CACHE_TTL=3600
ENABLE_REDIS_CACHE=true
ENABLE_MEMORY_CACHE=false

# API Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100

# Health Check Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're currently performing scheduled maintenance. Please check back soon."

# Feature Flags
ENABLE_VIDEO_TESTIMONIALS=true
ENABLE_CHAT_SUPPORT=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ADVANCED_ANALYTICS=true
